@model Learning.Models.AuthorAllModel
@{
    ViewBag.Title = "My Profile";
}
<div style="margin-top:70px;">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-3">
                <img src="~/Img/profile.png" alt="Sample Photo" />
            </div>
            <div class="col-md-9">
                <h2>@Model.authorModel.fullname</h2>
                @if (Model.authorModel.penulis != null)
                {
                    for (int i = 0; i < Model.authorModel.penulis.Rows.Count; i++)
                    {
                        <span>@Model.authorModel.penulis.Rows[i]["Nama"].ToString(), </span>
                    }
                }
                <hr>
                <p>@Model.authorModel.afiliasi</p>
                <p>@Model.authorModel.email</p>
            </div>
        </div>
        <hr>
        <div>
            <table class="table table-stripped">
                <thead>
                    <tr>
                        <th style="text-align: center" width="50%">Judul</th>
                        <th style="text-align: center">Jumlah Citasi</th>
                        <th style="text-align: center">Tahun</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @if (Model.authorModel.artikel != null)
                        {
                            for (int i = 0; i < Model.authorModel.artikel.Rows.Count; i++)
                            {
                                <td>@Model.authorModel.artikel.Rows[i]["Judul Artikel"].ToString()</td>
                                if (Model.authorModel.citasi.Rows != null)
                                {
                                    <td align="center">@Model.authorModel.citasi.Rows[i]["Jumlah Citasi"].ToString()</td>
                                }
                                else
                                {
                                    <td align="center">0</td>
                                }
                                <td align="center">@Model.authorModel.artikel.Rows[i]["Tahun"].ToString()</td>
                            }
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-4" style="margin-top:25px;">
        <div class="well" style="background-color:#57BF98">
            @using (Html.BeginForm("Search", "Home", FormMethod.Post))
            {
                <div class="input-group" style="margin-bottom:10px; width:100%;">
                    @Html.TextBoxFor(m => m.searchAuthor.key, new { @class = "form-control" })
                    <div class="input-group-btn">
                        <div class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
